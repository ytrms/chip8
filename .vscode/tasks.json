{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cc",
      "args": [
        "src/chip8.c",
        "-g",
        "-Wall",
        "-Wextra",
        "-I/opt/homebrew/include",
        "-L/opt/homebrew/lib",
        "-lraylib",
        "-o",
        "chip8"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}